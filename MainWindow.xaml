            <!-- <RadioButton Content="Exit"
                             Height="90"
                             Width ="100"
                             Foreground="Black"
                             Background="#EE856F"
                             FontSize="25"
                             Grid.Row="0"
                             Style="{StaticResource MenuButtonTheme}"
                             Margin="0,0,20,0"
                             HorizontalAlignment="Right"
                             Click="ExitButton"
                             Grid.Column="1"/> -->


            <Border CornerRadius="8"
                    Grid.Row ="0"
                    Grid.Column="2"
                    Height="70"
                    Width ="70"
                    HorizontalAlignment="Right"
                    Margin="0,0,15,0"
                    MouseDown="ExitButton">
                <Border.Background>
                    <ImageBrush Stretch="Fill" ImageSource="/Images/close_button.png"/>
                </Border.Background>
            </Border>

            <!--> Logo image <-->
            <Image Grid.Row ="0" 
                   Width="190"
                   Height="78.43"
                   Source="/Images/logo_eti.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="Visible"/>

            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Margin="0"
                            Content="{Binding CurrentView}"/>


            <!--> Inner section <-->

            
            <Image Source="/Images/left_icon.png"
                   Grid.Row="2"
                   HorizontalAlignment="Right"
                   Height="75"
                   Width="75"
                   Margin="0,10,0,10"
                   MouseDown="MoveLeft"/>

            <Image Source="/Images/right_icon.png"
                   Grid.Column="2"
                   Grid.Row="2"
                   HorizontalAlignment="Left"
                   Height="75"
                   Width="75"
                   Margin="0,10,0,10"
                   MouseDown="MoveRight"/>

            <!--> Function buttons <-->
            <StackPanel Orientation="Horizontal"
                    Grid.Column="2" Grid.Row="1"
                        Background="#f9f9f9">

                <Canvas IsHitTestVisible="False"
                        Name="MagnifierPanel">
                    <Border BorderBrush="Black" 
                            BorderThickness="1" 
                            Margin="5, 5, 5, 5">
                        <Rectangle Stroke="Transparent"
                                   Name="MagnifierRectangle"
                                   Height="290" 
                                   Width="290">
                            <Rectangle.Fill>
                                <VisualBrush x:Name="MagnifierBrush"
                                             Visual="{Binding ElementName=UserImage}" 
                                             ViewboxUnits="Absolute"/>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Border>
                    <Line X1="150" Y1="5"
                          X2="150" Y2="295"
                          Stroke="Black"
                          StrokeThickness="2"
                          StrokeDashArray="1, 3"/>
                    <Line X1="5" Y1="150"
                          X2="295" Y2="150"
                          Stroke="Black"
                          StrokeThickness="2"
                          StrokeDashArray="1, 3"/>

                </Canvas>

                <Image Source="Images/zoom_icon.png"
                       Width="100"
                       Margin="50,0,0,0"
                       MouseDown="ZoomMagnifier"/>
                <Image Source="Images/unzoom_icon.png"
                       Width="100"
                       MouseDown="UnzoomMagnifier"/>
            </StackPanel>

            <!--> Points List <-->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Grid.Column="0" 
                          Grid.Row="1">
                <StackPanel Orientation="Vertical" 
                            Grid.Column="1" 
                            Grid.Row="1"
                            Background="#f9f9f9"
                            Name="listOfPoints">
                    <TextBlock Text="Points List"
                               HorizontalAlignment="Center"
                               Margin="0, 20, 0, 10"
                               FontSize="23"
                               FontFamily="/Fonts/#Roboto"
                               Visibility="Visible"
                               Name="PlaceHolder"/>
                </StackPanel>
            </ScrollViewer>


            <Border BorderThickness="2 2 2 2" 
                    BorderBrush="Black"
                    Grid.Column ="1"
                    Grid.Row="1"/>



            <!--> Center section <-->
            <Grid Grid.Row="1" Grid.Column="1" Background="#f9f9f9"/>
            <RadioButton Grid.Column ="1"
                         Grid.Row="1"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Style="{StaticResource UploadButtonTheme}"
                         Click="UploadImage"
                         Name="upload"
                         Visibility ="Visible"
                         />

            <Border Grid.Column="1" 
                    Grid.Row="1"
                    BorderThickness="2" 
                    BorderBrush="Black">
                <local:ZoomBorder x:Name="border" 
                                  ClipToBounds="True" 
                                  Background="Transparent" 
                                  Grid.Column="1" 
                                  Grid.Row="1"
                                  Visibility="Hidden">
                    <Canvas Grid.Column="1"
                               Grid.Row="1"
                               x:Name="canvas1"
                               Width="900"
                               Height="700"
                               Background="Transparent"
                               Focusable="True">
                              <!--  MouseMove="UserImage_MouseMove" MouseEnter="UserImage_MouseEnter" MouseLeave="UserImage_MouseLeave" -->
                               

                        <Image Grid.Column="1"
                               Grid.Row="1"
                               x:Name="UserImage"
                               Width="900"
                               Height="700"
                               Stretch="Uniform"
                               MouseLeftButtonDown="SetIndex"
                        MouseMove="UserImage_MouseMove" MouseEnter="UserImage_MouseEnter" MouseLeave="UserImage_MouseLeave"
                                />

                    </Canvas>
                </local:ZoomBorder>
            </Border>
            <!--> Row 0 Column 2 <-->
            <Grid Grid.Row="0" Grid.Column="1" MouseDown="DragWindow"/>
            <StackPanel Grid.Row="0"
                        Grid.Column="1"
                        Orientation="Vertical">

                <TextBlock Text=""
                           x:Name="posX"
                           HorizontalAlignment="Left"
                           Margin="40, 30, 0, 10"
                           FontSize="20"
                           FontFamily="#Roboto"/>

                <TextBlock Text=""
                           x:Name="posY"
                           HorizontalAlignment="Left"
                           Margin="40, 0, 0, 30"
                           FontSize="20"
                           FontFamily="#Roboto"/>
            </StackPanel>

            <StackPanel Grid.Row="2" 
                        Grid.Column ="1"
                        Orientation="Horizontal"
                        Name="ImageGallery">

            </StackPanel>
        </Grid>
    </Border>
</Window>
