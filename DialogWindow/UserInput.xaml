<Window x:Class="CharacteristicPoints.DialogWindow.UserInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CharacteristicPoints.DialogWindow"
        mc:Ignorable="d"
        Title="UserInput" Height="100" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel HorizontalAlignment="Left">
            <TextBlock Text="Enter new name for your point" 
                       Margin=" 10, 10, 0, 0"/>
            <TextBox x:Name="RenameBox" 
                     Margin="10, 10, 0, 0"/>
            
        </StackPanel>

        <Button Content="OK" 
                Click="OKButton_Click" 
                Grid.Column="1"
                Height="50"
                Width="50"/>
    </Grid>
</Window>
